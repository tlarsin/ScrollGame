#:kivy 1.0.9

<SpriteCharacter>:
    size: 15,30
    canvas:
        Rectangle:
            source: 'sprite.bmp'
            pos: self.pos
            size: self.size

<Block>:
    size: 400,15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
<RunGame>:
    sprite: character
    block: blocks

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.sprite.distance)

    SpriteCharacter:
        id: character
        center_x: root.center_x
        y: blocks.height

    Block:
        id: blocks
        center_x: root.center_x
        y: root.y
